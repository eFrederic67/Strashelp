{% extends 'layout.html.twig' %}

{% block content %}
    <section class="td-form">
        <div class="row td-form-wrapper">
            <div class="col td-glass" style="background-color: grey;">
                <form class="td-form-wrapper" style="background-color: #4d5c8b;" method="post">
                    <h1 class="text-center">Créer une annonce</h1>
                    <div class="form-group">
                        <div class="col-md-12"><label for="name">Titre de l'annonce*</label>
                            <div class="d-flex"><input class="form-control d-flex" type="text" autocomplete="off" required="" value="{{ post.title }}" placeholder="Nom de l'annonce" name="title"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div>
                                <fieldset></fieldset>
                                <fieldset>
                                    <legend>Quel type d'annonce souhaitez vous postez</legend>
                                    <div class="custom-control custom-radio custom-control-inline"><input type="radio" id="customRadioInline1" class="custom-control-input" name="type" value="0" checked=""><label class="custom-control-label col-3 my-2" for="customRadioInline1">Offre</label></div>
                                    <div class="custom-control custom-radio custom-control-inline"><input type="radio" id="customRadioInline2" class="custom-control-input" name="type" value="1"><label class="custom-control-label col-3 my-2" for="customRadioInline2">Demande</label></div>
                                </fieldset>
                            <div class="form-group col-md-6">
                                <label for="id_category">Type d'annonce</label>
                                <select name="id_category" class="custom-select" id="id_category">
                                    {% for cnameid in cname %}
                                        <option value="{{ cnameid.id }}">{{ cnameid.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12"><label for="Date">Date</label>
                            <div class="d-flex td-input-container"><input class="form-control" type="date" autocomplete="off" name="date_publication" value="{{ post.date_publication }}"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-lg-flex flex-wrap align-items-lg-center col-md-12"><label class="col-2">Horaire de début</label>
                            <div class="d-flex td-input-container"><input class="form-control" type="time" autocomplete="off" name="start_hour" required value="{{ post.start_hour }}"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="d-lg-flex flex-wrap align-items-lg-center col-md-12"><label class="col-2">Horaire de fin</label>
                            <div class="d-flex td-input-container"><input class="form-control" type="time" autocomplete="off" name="end_hour" required value="{{ post.end_hour }}"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12"><label for="text_annoucement">Descriptif de votre annonce *</label>
                            <div class="d-flex td-input-container"><i class="icon ion-android-create align-self-center"></i><textarea class="form-control" id="editor" name="text_annoucement" rows="6" cols="50">{{ post.text_annoucement }}</textarea></div>
                        </div>
                    </div>
                    <div>
                        &nbsp;<br/>
                        &nbsp;<br/>
                        &nbsp;<br/>
                        &nbsp;<br/>
                        &nbsp;<br/>
                    <div class="form-group">
                        <div class="col-md-12"><button class="btn btn-dark float-right" type="submit">Ajouter votre annonce</button></div>
                    </div>
                </form>
            </div>
        </div>
    </section>


