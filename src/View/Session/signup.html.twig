{% extends 'layout.html.twig' %}

{% block content %}

<div class="signup" id="signup" style="display: {{display}};">
    <h1 class="h3 text-center mt-2">Formulaire d'inscription</h1>
    <form class="Session_form text-center border border-light p-4 col-4 offset-4" target="" method="POST">
        <fieldset>
            <div>
                <fieldset>
                    <legend>Votre date de naissance</legend>
                    Vous devez être majeur pour vous inscrire.
                    <span class="SignUpFormError">{{ errors.DateOfBirthError }}</span>
                    <div class="form-row">
                        <div class="form-group col-md-2 offset-2">
                            <label for="dayOfBirth">Jour</label><br/>
                            <input class="form-control text-center" type="text" id="dayOfBirth" name="dayOfBirth" pattern="[0-9]{2}" minlength="1" maxlength="2" max="31" placeholder="jj" value="{{ dayOfBirth }}" />
                        </div>
                        <div class="form-group col-md-2">
                            <label for="monthOfBirth">Mois</label><br/>
                            <input class="form-control text-center" type="text" id="monthOfBirth" name="monthOfBirth" pattern="[0-9]{2}" minlength="1" maxlength="2" max="12" placeholder="mm" value="{{ monthOfBirth }}" />
                        </div>
                        <div class="form-group col-md-4">
                            <label for="yearOfBirth">Année</label><br/>
                            <input class="form-control text-center" type="text" id="yearOfBirth" name="yearOfBirth" pattern="[0-9]{4}" minlength="4" maxlength="4"  max="2025" placeholder="aaaa" value="{{ yearOfBirth }}" />
                        </div>
                    </div>
                </fieldset>
            </div>
            <div>
                <input type="hidden" name="MAX_FILE_SIZE" value="2000000" />
                <img class="profilPic" src="/assets/images/profil.png" alt="profilpic">
                <input type="hidden" name="avatar" value="/assets/images/profil.png">
            </div>

            <div>
                <label for="login">Choississez un login</label><br/>
                <input class="form-control" type="text"  id="login"  name="login" value="{{ login }}" /> <span class="SignUpFormError">{{ errors.login }}</span>
            </div>
            <div>
                <label for="email">Votre e-mail</label><br/>
                <input class="form-control" type="email"  id="email"  name="email" value="{{ email }}" /> <span class="EmailFormError">{{ errors.email }}</span>
            </div>
            <div>
                <label for="emailConf">Confirmez votre e-mail</label><br/>
                <input class="form-control" type="email"  id="emailConf"  name="emailConf" value="{{ emailConf }}" /> <span class="EmailFormError">{{ errors.emailConf }}</span>
            </div>
            <div>
                <label for="password">Saississez un mot de passe</label><br/>
                <input class="form-control" type="password"  id="password"  name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" value="{{ password }}" /><span class="SignUpFormError">{{ errors.password }}</span>
            </div>
            <div>
                <label for="passwordConf">Confirmez votre mot de passe</label><br/>
                <input class="form-control" type="password"  id="passwordConf"  name="passwordConf" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" value="{{ passwordConf }}" /><span class="SignUpFormError">{{ errors.passwordConf }}</span>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-row">
                <div class="form-group col-6">
                    <label for="lastname">Nom</label><br/>
                    <input class="form-control" type="text"  id="lastname"  name="lastname" value="{{ lastname }}" /><span class="SignUpFormError">{{ errors.lastname }}</span>
                </div class="form-group col-6">
                    <div>
                    <label for="firstname">Prénom</label><br/>
                    <input class="form-control" type="text"  id="firstname"  name="firstname" value="{{ firstname }}" /><span class="SignUpFormError">{{ errors.firstname }}</span>
                </div>
            </div>

            <div>
                <label for="adresse_1">Adresse</label><br/>
                <input class="form-control" type="text"  id="adresse_1" name="adresse_1" value="{{ adresse_1 }}"  /><span class="SignUpFormError">{{ errors.adresse_1 }}</span>
            </div>
            <div>
                <label for="adresse_2">Adresse complément <i>(optionnel)</i></label><br/>
                <input class="form-control" type="text"  id="adresse_2" name="adresse_2" value="{{ adresse_2 }}"/>
            </div>

            <div class="form-row">
                <div class="form-group col-3">
                    <label for="zipcode">C.P.</label><br/>
                    <input class="form-control" type="text"  id="zipcode" name="zipcode" minlength="5" maxlength="5" value="{{ zipcode }}" /><span class="SignUpFormError">{{ errors.zipcode }}</span>
                </div>
                <div class="form-group col-9">
                    <label for="city">Ville</label><br/>
                    <input class="form-control" type="text"  id="city" name="city" value="{{ city }}" /><span class="SignUpFormError">{{ errors.city }}</span>
                </div>
            </div>
            <div>
                <label for="phone">Téléphone <i>(fixe ou portable)</i></label><br/>
                <input class="form-control text-center" type="text"  id="phone" name="phone" pattern="(01|02|03|04|05|06|07|08|09)[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}" minlength="10" maxlength="10" placeholder="0612345678" value="{{ phone }}"  /><span class="SignUpFormError">{{ erros.phone }}</span>
            </div>

            <div>
                <textarea class="form-control my-4" name="description" id="description" rows="5" placeholder="Parlez de vous..."></textarea>
            </div>
        </fieldset>
        <div  class="button">
            <button class="btn btn-info btn-block mb-2" type="submit">Envoyer</button>
        </div>
    </form>
</div>
