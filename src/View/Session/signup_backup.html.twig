{% extends 'layout.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block content %}
    {{ message }}
    <h1>Formulaire d'inscription</h1>
    <form class="Session_form" target="" method="POST">
        <div>
            <label  for="nom">Choississez un login</label><br/>
            <input  type="text"  id="login"  name="login" required />
        </div>
        <div>
            <label  for="nom">Nom</label><br/>
            <input  type="text"  id="lastname"  name="login" required />
        </div>
        <div>
            <label  for="nom">Prénom</label><br/>
            <input  type="text"  id="firstname"  name="login" required />
        </div>
        <div>
            <label  for="password">Saississez un mot de passe</label><br/>
            <input  type="password"  id="password"  name="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required />
        </div>
        <div>
            <label  for="passwordConf">Confirmez votre mot de passe</label><br/>
            <input  type="password"  id="passwordConf"  name="passwordConf" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" required />
        </div>

        <div>
            <label  for="adresse_1">Adresse</label><br/>
            <input  type="text"  id="adresse_1" name="adresse_1" required />
        </div>
        <div>
            <label  for="adresse_2">Adresse complément <i>(optionnel)</i></label><br/>
            <input  type="text"  id="adresse_2" name="adresse_2"/>
        </div>
        <div>
            <label  for="zipcode">Code postal</label><br/>
            <input  type="text"  id="zipcode" name="zipcode" required />
        </div>
        <div>
            <label  for="city">Ville</label><br/>
            <input  type="text"  id="city" name="city" required />
        </div>
        <div>
            <label  for="phone">Téléphone <i>(fixe ou portable)</i></label><br/>
            <input  type="text"  id="phone" name="phone" pattern="(01|02|03|04|05|06|07|08|09)[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}" minlength="10" maxlength="15" placeholder="0612345678" required />
        </div>
        <div>
            <label  for="phone">Date de naissance <i>(format jj-mm-aaaa)</i></label><br/>
            <input  type="text"  id="phone" name="phone" pattern="[0-9]{2}[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{4}" minlength="8" maxlength="8" placeholder="23-10-1979" required />
        </div>
        <div>
            <label  for="avatar">Changer de photo de profil<br/>
            <input type="hidden" name="MAX_FILE_SIZE" value="2000000" />
            <img src="/assets/images/profil.png" alt="profil">
            </label><br/>
            <input  type="file"  id="avatar" name="avatar" />
            <label>max 2 Mo</label><br/>
        </div>


        <div  class="button">
            <button  type="submit">Envoyer</button>
        </div>
    </form>
{% endblock %}
