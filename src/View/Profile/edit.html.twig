{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Edit profile</h1>

    <form method="post">
        <input type="hidden" value="{{ myprofile.id }}" name="id">
        <div>
            <label for="email">Adresse e-mail :</label>
            <input type="text" value="{{ myprofile.email }}" name="email" id="email">
        </div>
        <div>
            <label for="adresse1">Adresse_1 :</label>
            <input type="text" value="{{ myprofile.adresse_1 }}" name="adresse1" id="adresse1">
        </div>
        <div>
            <label for="adresse2">Adresse_2 :</label>
            <input type="text" value="{{ myprofile.asdresse_2 }}" name="adresse2" id="adresse2">
        </div>
        <div>
            <label for="phone">Numéro de téléphone</label>
            <input type="text" value="{{ myprofile.phone }}" name="phone" id="phone">
        </div>

        <div>
        <input type="submit" value="Mettre a jour">
        </div>
    </form>

    <a href="/profile/myprofile/1">Back</a>
{% endblock %}