{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Edit profile</h1>

    {% for session in session %}
    <form method="post">
        <div>
            <label  for="avatar">Changer de photo de profil<br/>
                <input type="hidden" name="MAX_FILE_SIZE" value="2000000" />
                <img src="{{ session.avatar }}" alt="profil">
            </label><br/>
            <input  type="file"  id="avatar" name="avatar" />
            <label>max 2 Mo</label><br/>
        </div>
        <div>
            <label for="email">Adresse e-mail :</label><br>
            <input type="text" value="{{ session.email }}" name="email" id="email">
        </div>
        <div>
            <label for="pseudo">Pseudo :</label><br>
            <input type="text" value="{{ session.login }}" name="login" id="pseudo">
        </div>
        <div>
            <label for="adresse1">Adresse_1 :</label><br>
            <input type="text" value="{{ session.adresse_1 }}" name="adresse_1" id="adresse1">
        </div>
        <div>
            <label for="adresse2">Adresse_2 :</label><br>
            <input type="text" value="{{ session.adresse_2 }}" name="adresse_2" id="adresse2">
        </div>
        <div>
            <label  for="phone">Téléphone <i>(fixe ou portable) :</i></label><br>
            <input  type="text"  id="phone" name="phone" value="{{ session.phone }}" pattern="(01|02|03|04|05|06|07|08|09)[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}[ \.\-\/]?[0-9]{2}" minlength="10" maxlength="15"  />
        </div>
        <div>
            <label for="description">Présentation :</label><br>
            <textarea name="description" id="description" cols="30" rows="5">{{ session.description }}</textarea>
        </div>

        <div>
        <input type="submit" value="Mettre a jour">
        </div>
    </form>
    {% endfor %}


    <a href="/profile/myprofile">Back</a>
{% endblock %}