{% extends 'layout.html.twig' %}

{% block content %}

<form action="/" method="POST">
    <div id="form">
        <h3>
            Signaler une annonce
        </h3>
        <input type="hidden" value="{{ $userId }}" name="user_id">
        <input type="hidden" value="{{ $userLogin }}" name="user_login">
        <input type="hidden" value="{{ $postId }}" name="post_id">
        <input type="hidden" value="{{ $postAuthorId }}" name="post_author_id">
        <input type="hidden" value="{{ $postAuthorLogin }}" name="post_author_login">
        <input type="hidden" value="{{ $alertMessage }}" name="alert_message">
        <input type="hidden" value="{{ $date }}" name="alert_date">
        <label for="{{ $alertMessage }}">Motif du signalement</label>
        <input type="text" id="alert" name="alert_message" required><br>
        <div class="button">
            <input type="submit" value="Valider">
            <div style="clear:both"></div>
        </div>
    </div>
</form>

{% endblock %}