{% extends 'layout.html.twig' %}
{% block title %}{% endblock %}
{% block content %}
    <div class="card col-md-5 col-12 offset-md-3 my-2">
        <form action="" method="POST">
            <div id="form">
                <div class="card-header">
                    <h3>
                        Signaler l'annonce {{ post.title }}
                    </h3>
                </div>
                <div class="card-body">
                    <label for="themeList">Motif du signalement :</label>
                    <SELECT id="themeList" name="theme" size="1" required>
                        <OPTION value="">--Choisir dans la liste--
                        <OPTION value="Scam">Arnaque, spam ou fausse identité
                        <OPTION value="Fee">Propose/recherche un service payant
                        <OPTION value="Other">AUTRES
                    </SELECT>
                    <div class="card-text">
                        <label for="alert">Merci de préciser :</label>
                        <textarea id="alert" name="alert_message" required autofocus placeholder="Entrez votre message"></textarea>
                    </div>
                    <div class="button text-center">
                        <input type="submit" value="Valider">
                        <div style="clear:both"></div>
                    </div>

                </div>
            </div>
        </form>
    </div>

{% endblock %}
