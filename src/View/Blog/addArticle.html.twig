{% extends 'layout.html.twig' %}

{% block content %}
        <div class="card col-12 col-md-6 offset-md-3 my-4">
                <h1 class="card-header info-color white-text text-center py-4">Créer un article</h1>
            <div class="card-body px-lg-5 pt-0">
                <form class="md-form" method="post" enctype="multipart/form-data">
                    <div>
                        <div class="mt-2">
                            <label for="name">Titre de l'article *</label>
                            <input class="form-control" type="text" autocomplete="off" required="" value="{{ post.title }}" placeholder="Titre" name="title">
                        </div>
                    </div>

                    <div>
                        <div>
                            <div class="mt-2">
                                <label>Catégorie de l'article</label>
                                <select name="id_category" class="custom-select mdb-select" id="id_category">
                                    {% for cnameid in cname %}
                                        <option value="{{ cnameid.id }}">{{ cnameid.name | capitalize}}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            </div>
                        </div>
                    </div>
                    <div class="mt-2 row">
                        <div class="col-md-8 col-12">
                            <label for="Date">Date de parution</label>
                            <div>
                                <input class="form-control datepicker" type="date" autocomplete="off" name="date_publication" value="{{ post.date_publication }}">
                            </div>
                        </div>
                        <div class="col-md-4 col-12">
                            <label>Heure de parution</label>
                            <div>
                                <input class="form-control datepicker text-center" type="time" autocomplete="off" name="end_hour" required value="{{ post.end_hour }}">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 col-12">
                        <label>Image d'en-tête</label>
                        <div class="overlay-image" onclick="document.getElementById('imgEnTeteFile').click()">
                            <a href="" ><img class="image" src="{{ imgEnTete }}" alt="image d'en-tête" id="profilPic"/></a>
                            <div class="hover">
                                <img class="image" src="{{ imgEnTete }}" alt="image d'en-tête" id="profilPicHover"/>
                                <div class="fas fa-camera-retro text"></div>
                                <div class="text2">Changer de photo</div>
                                <input type="hidden" name="MAX_FILE_SIZE" value="0" />
                            </div>
                        </div>
                        <input type="file" name="fichier" id="imgEnTeteFile" onchange="readURL(this);"/>

                    </div>
                    <div class="mt-2">
                        <div>
                            <label for="text_annoucement">Descriptif de votre annonce *</label>
                            <div>
                                <i class="icon ion-android-create align-self-center"></i>
                                <textarea id="editor" name="text_annoucement">{{ post.text_annoucement }}</textarea>
                            </div>
                        </div>
                    </div>
                        <div>
                            <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Ajouter votre annonce</button>
                        </div>
            </form>
            </div>
        </div>
{% endblock %}
{% block javascript %}
<script>
ClassicEditor
    .create( document.querySelector( '#editor' ) )
    .catch( error => {
        console.error( error );
    } );
</script>
{% endblock %}